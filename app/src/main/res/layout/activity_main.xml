<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.locktouch.MainActivity">

    <Button
        android:id="@+id/btnAbrir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnTiempo"
        android:layout_marginBottom="69dp"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@+id/btnCerrar"
        android:onClick="abrirPuerta"
        android:text="Abrir puerta"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="96dp" />

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAbrir"
        android:layout_alignBottom="@+id/btnAbrir"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp"
        android:onClick="cerrarPuerta"
        android:text="Asegurar Puerta" />

    <Button
        android:id="@+id/btnTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:onClick="Ponerhorario"
        android:text="Fijar horario de cierre" />

    <TextView
        android:id="@+id/tvTiempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/estado" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp"
        android:layout_toStartOf="@+id/btnCerrar"
        android:text="El horario de cierre es a las " />

    <TextView
        android:id="@+id/estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAbrir"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/estado"
        android:layout_alignEnd="@+id/btnCerrar"

        />

    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAbrir"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="" />


</RelativeLayout>
